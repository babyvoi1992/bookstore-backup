<style>
  .modal-header, h4, .close {
    background-color: #5cb85c;
    color: white !important;
    text-align: center;
    font-size: 30px;
  }

  .modal-footer {
    background-color: #f9f9f9;
  }
</style>


<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="padding:35px 50px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4><span class="glyphicon glyphicon-edit"></span> Create Book</h4>
        </div>
        <div class="modal-body" style="padding:40px 50px;">
          <form role="form" id="frmsubmit" data-method-type="" data-url="">
            <div class="form-group">
              <label for="title"><span class="glyphicon glyphicon-book"></span> Title</label>
              <input type="text" class="form-control" id="edtTitle" placeholder="Enter Book Title">
            </div>
            <div class="form-group">
              <label for="author"><span class="glyphicon glyphicon-book"></span> Author</label>
              <input type="text" class="form-control" id="edtAuthor" placeholder="Enter Author Name">
            </div>

            <div class="form-group">
              <label for="content"><span class="glyphicon glyphicon-book"></span> Content</label>
              <input type="text" class="form-control" id="edtContent" placeholder="Enter Content Books">
            </div>

            <button type="submit" class="btn btn-success btn-block">
              <span class="glyphicon glyphicon-circle-arrow-right"></span> Create
            </button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal">
            <span class="glyphicon glyphicon-remove"></span> Cancel
          </button>

        </div>
      </div>

    </div>
  </div>
</div>





